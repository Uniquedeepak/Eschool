@model MvcApplication1.Models.UserEdit
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "School Admin";
}

<div class="row">
    @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new { @class = "col-md-8 form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        <div><h4>Create a new account.</h4></div>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Email, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Address, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.City, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.City, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.LastName, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Mobile, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Mobile, new { @class = "col-md-6 form-control" })
            </div>
        </div>
       
        <div class="form-group">
            @Html.Label("user Role", new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.DropDownList("UserRole", (SelectList)ViewBag.Name, new { @class = "col-md-6 form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-8">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }

</div>

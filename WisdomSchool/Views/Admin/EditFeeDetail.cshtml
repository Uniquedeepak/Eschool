@model SchoolApi.StudentFeeDetail
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "School Admin";
}

<div class="row">
    @using (Html.BeginForm("EditFeeDetail", "Admin", FormMethod.Post, new { @class = "form-inline", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        <div><h4>Edit Fee Details</h4></div>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger None" })
        <div class="form-group hide">
            <div class="col-md-8">
                @Html.HiddenFor(m => m.Id, new { @class = "col-md-6 form-control" })
            </div>
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Name, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Class, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Class, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.AdmissionNo, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.AdmissionNo, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.ReciptNo, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.ReciptNo, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Months, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Months, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.PaidAmount, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.PaidAmount, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.PreviousDue, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.PreviousDue, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.TotalAmount, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.TotalAmount, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.GrandTotal, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.GrandTotal, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.Balance, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">

            @Html.LabelFor(m => m.OldBalanced, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.OldBalanced, new { @class = "col-md-6 form-control" })
            </div>
        </div>
        <div class="form-group col-md-4">
            @Html.LabelFor(m => m.TransportFee, new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.TransportFee, new { @class = "col-md-6 form-control" })

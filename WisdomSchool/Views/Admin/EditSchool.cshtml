@model SchoolApi.School
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "School Admin";
}

<div class="form-horizontal">
    @using (Html.BeginForm("EditSchool", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        <div><h4>Update School Details</h4></div>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger None" })
        <div class="form-group hide">
            <div class="">
                @Html.HiddenFor(m => m.ID, new { @class = "col-sm-6" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.SchoolName, new { @class = "control-label col-sm-2" })
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.SchoolName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            @Html.LabelFor(m => m.schooladdress, new { @class = "control-label col-sm-2" })
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.schooladdress, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            @Html.LabelFor(m => m.Phone, new { @class = "control-label col-sm-2" })
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.logo, new { @class = "control-label col-sm-2" })
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.logo, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            <div class="col-md-offset-7 ">
                <input type="submit" class="btn btn-success" value="Submit" />
            </div>
        </div>
    }

</div>
